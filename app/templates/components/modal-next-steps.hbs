{{#if showQuestions}}
      {{#tether-dialog
        close="toggleModal"
        renderInPlace=true
        targetAttachment='none'
        container-class='ember-modal-dialog-in-place'
        overlay-class='ember-modal-overlay-in-place'
      }}

      {{#with responseService.filters.firstObject as |firstQuestion|}}
      <h2>{{firstQuestion.question}}</h2>
      <button {{action 'answerQuestion' true firstQuestion.id}} type="button">Yes</button>
      <button {{action 'answerQuestion' false firstQuestion.id}} type="button">No</button>
      {{/with}}

      {{log responseService.filters.answer}}
      
      {{#each responseService.filters as |question|}}
        {{#with question.answer as |answer|}}
        {{#if answer}}
        <h2>{{question.question}}</h2>
        <button {{action 'answerQuestion' true question.id}} type="button">Yes</button>
        <button {{action 'answerQuestion' false question.id}} type="button">No</button>
        {{/if}}
        {{/with}}

      {{/each}}

      {{/tether-dialog}}
{{else}}
  <button {{action 'showQuestions'}} type="button">Show Modal</button>
{{/if}}
